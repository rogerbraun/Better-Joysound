<html>
  <head>
    <title>Joysound</title>
    <% if @ongoing %>
      <meta http-equiv="refresh" content="2; URL=<%= request.url.gsub(";ongoing=1","") %>;ongoing=1">
    <% end %>

  </head>

  <body>
    <h1>Joysound-Suche</h1>
    <p>
      <form action="/" method="get">
        <input name="query" />
        <select name="kind">
          <option value="title">Titel</option>
          <option value="artist">KÃ¼nstler</option>
        </select>
      </form>
    </p>
    <% if @results %>
      <table>
      <tr>
        <td>Title</td>
        <td>Artist</td>
        <td>Number</td>
        <td>Utaidashi</td>
      </tr>
        <% @results.each do |result| %>
          <tr>
            <td><%= result.title %></td>
            <td><%= result.artist %></td>
            <td><%= result.number %></td>
            <td><%= result.utaidashi %></td>
          </td>
        <% end %>
        <% if @ongoing %>
          <tr>
            <td colspan="4">
              <p>Suche weiter...</p>
            </td>
          <tr>
        <% end %>
      </table>

    <% end %>

  </body>

</html>
