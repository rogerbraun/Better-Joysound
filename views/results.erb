
              <table>
              <tr>
                <td>Title</td>
                <td>Artist</td>
                <td>Number</td>
                <td>Utaidashi</td>
              </tr>
                <% @results.each do |result| %>
                  <tr>
                    <td><%= result.title %></td>
                    <td><%= result.artist %></td>
                    <td><%= result.utaidashi %></td>
                    <td><b><%= result.number %></b></td>
                  </td>
                <% end %>
                <% if @ongoing %>
                  <tr>
                    <td colspan="4">
                      <img src="/ajax-loader.gif" />
                    </td>
                  <tr>
                <% end %>
              </table>
